<%- include('../layouts/main', { title: 'Mon Profil' }) %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h2>Mon Profil</h2>
        </div>
        <div class="card-body">
          <!-- Formulaire de mise à jour du profil -->
          <form action="/users/profile" method="POST" class="mb-4">
            <div class="mb-3">
              <label for="username" class="form-label">Nom d'utilisateur</label>
              <input
                type="text"
                class="form-control"
                id="username"
                name="username"
                value="<%= user.username %>"
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                value="<%= user.email %>"
              />
            </div>
            <button type="submit" class="btn btn-primary">
              Mettre à jour le profil
            </button>
          </form>

          <hr />

          <!-- Formulaire de changement de mot de passe -->
          <h3>Changer le mot de passe</h3>
          <form action="/users/password" method="POST" class="mb-4">
            <div class="mb-3">
              <label for="currentPassword" class="form-label"
                >Mot de passe actuel</label
              >
              <input
                type="password"
                class="form-control"
                id="currentPassword"
                name="currentPassword"
                required
              />
            </div>
            <div class="mb-3">
              <label for="newPassword" class="form-label"
                >Nouveau mot de passe</label
              >
              <input
                type="password"
                class="form-control"
                id="newPassword"
                name="newPassword"
                required
              />
            </div>
            <button type="submit" class="btn btn-warning">
              Changer le mot de passe
            </button>
          </form>

          <hr />

          <!-- Section de suppression de compte -->
          <h3 class="text-danger">Zone dangereuse</h3>
          <p>
            La suppression de votre compte est irréversible. Toutes vos données
            seront définitivement supprimées.
          </p>
          <form
            action="/users/account/delete"
            method="POST"
            onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.');"
          >
            <button type="submit" class="btn btn-danger">
              Supprimer mon compte
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
