<%- include('../layouts/main', { title: 'Rapports Financiers' }) %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Rapports Financiers</h1>
    <button
      type="button"
      class="btn btn-primary"
      data-bs-toggle="modal"
      data-bs-target="#generateReportModal"
    >
      Générer un rapport mensuel
    </button>
  </div>

  <!-- Résumé financier -->
  <div class="row mb-4">
    <div class="col-md-4">
      <div class="card bg-primary text-white">
        <div class="card-body">
          <h5 class="card-title">Revenus Totaux</h5>
          <h3 class="card-text"><%= totalIncome.toFixed(2) %> €</h3>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card bg-danger text-white">
        <div class="card-body">
          <h5 class="card-title">Dépenses Totales</h5>
          <h3 class="card-text"><%= totalExpenses.toFixed(2) %> €</h3>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div
        class="card <%= netBalance >= 0 ? 'bg-success' : 'bg-warning' %> text-white"
      >
        <div class="card-body">
          <h5 class="card-title">Solde Net</h5>
          <h3 class="card-text"><%= netBalance.toFixed(2) %> €</h3>
        </div>
      </div>
    </div>
  </div>

  <!-- Dépenses par catégorie -->
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Dépenses par Catégorie</h5>
        </div>
        <div class="card-body">
          <canvas id="expensesByCategoryChart"></canvas>
        </div>
      </div>
    </div>

    <!-- Utilisation des budgets -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Utilisation des Budgets</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Budget</th>
                  <th>Dépensé</th>
                  <th>Total</th>
                  <th>Utilisation</th>
                </tr>
              </thead>
              <tbody>
                <% budgetUsage.forEach(budget => { %>
                <tr>
                  <td><%= budget.name %></td>
                  <td><%= budget.spent.toFixed(2) %> €</td>
                  <td><%= budget.amount.toFixed(2) %> €</td>
                  <td>
                    <div class="progress">
                      <div
                        class="progress-bar <%= budget.percentage > 100 ? 'bg-danger' : 'bg-success' %>"
                        role="progressbar"
                        style="width: <%= Math.min(budget.percentage, 100) %>%"
                        aria-valuenow="<%= budget.percentage %>"
                        aria-valuemin="0"
                        aria-valuemax="100"
                      >
                        <%= budget.percentage.toFixed(1) %>%
                      </div>
                    </div>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal pour générer un rapport -->
<div class="modal fade" id="generateReportModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Générer un rapport mensuel</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
        ></button>
      </div>
      <form action="/reports/generate" method="POST">
        <div class="modal-body">
          <div class="mb-3">
            <label for="month" class="form-label">Mois</label>
            <input
              type="month"
              class="form-control"
              id="month"
              name="month"
              required
            />
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Annuler
          </button>
          <button type="submit" class="btn btn-primary">Générer</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Configuration du graphique des dépenses par catégorie
    const ctx = document.getElementById('expensesByCategoryChart').getContext('2d');
    const expensesData = <%- JSON.stringify(expensesByCategory) %>;

    new Chart(ctx, {
      type: 'pie',
      data: {
        labels: Object.keys(expensesData),
        datasets: [{
          data: Object.values(expensesData),
          backgroundColor: [
            '#FF6384',
            '#36A2EB',
            '#FFCE56',
            '#4BC0C0',
            '#9966FF',
            '#FF9F40'
          ]
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'right'
          },
          title: {
            display: true,
            text: 'Répartition des Dépenses'
          }
        }
      }
    });
  });
</script>
